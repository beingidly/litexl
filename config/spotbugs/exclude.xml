<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test classes -->
    <Match>
        <Source name="~.*Test\.java"/>
    </Match>

    <!-- Exclude benchmark module -->
    <Match>
        <Package name="~com\.beingidly\.litexl\.benchmark.*"/>
    </Match>

    <!-- Exclude examples module -->
    <Match>
        <Package name="~com\.beingidly\.litexl\.examples.*"/>
    </Match>

    <!-- API design: intentionally expose mutable internal state for fluent API -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <!-- API design: intentionally expose mutable arrays for performance -->
    <Match>
        <Bug pattern="MS_MUTABLE_ARRAY"/>
    </Match>

    <!-- Encryption: SecureRandom created per operation is intentional for security -->
    <Match>
        <Bug pattern="DMI_RANDOM_USED_ONLY_ONCE"/>
    </Match>

    <!-- Java 21+ pattern matching: compiler-generated dead stores -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>

    <!-- Nullable Boolean return is intentional API design -->
    <Match>
        <Bug pattern="NP_BOOLEAN_RETURN_NULL"/>
    </Match>

    <!-- Intentional compareTo negation for reverse ordering -->
    <Match>
        <Bug pattern="RV_NEGATING_RESULT_OF_COMPARETO"/>
    </Match>

    <!-- Intentional switch fallthrough -->
    <Match>
        <Bug pattern="SF_SWITCH_FALLTHROUGH"/>
    </Match>

    <!-- Platform-independent newline in format strings is acceptable -->
    <Match>
        <Bug pattern="VA_FORMAT_STRING_USES_NEWLINE"/>
    </Match>
</FindBugsFilter>
